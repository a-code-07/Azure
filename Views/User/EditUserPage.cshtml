@model GarageProject.Models.ApplicationUser
@{
    ViewBag.Title = "EditUserPage";
}

<h2 style="text-align:center;">Updating User's Details</h2>

<div class="jumbotron  field-validation-error">
    @using (Html.BeginForm())
    {
        <form id="editusr" onsubmit="return validate()">
            <table class="table form-group field-validation-valid field-validation-error">
                <tr>
                    <td class="form-group" style="color:chocolate;">
                        @Html.LabelFor(m => m.FirstName)
                    </td>
                    <td class="form-group" style="color:chocolate;">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", id = "fn" })

                    </td>

                    <td class="form-group" style="color:chocolate;">
                        @Html.LabelFor(m => m.LastName)
                    </td>
                    <td class="form-group" style="color:chocolate;">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", id = "ln" })
                    </td>
                </tr>
                <tr>
                    <td class="form-group" style="color:chocolate;">
                        @Html.LabelFor(m => m.PhoneNumber)
                    </td>
                    <td class="form-group" style="color:chocolate;">
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                    </td>
                    <td class="form-group" style="color:chocolate;">
                        @Html.LabelFor(m => m.City)
                    </td>
                    <td class="form-group" style="color:chocolate;">
                        @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                    </td>
                </tr>

            </table>
            @Html.HiddenFor(m=>m.UserName)
            @*@Html.HiddenFor(m => m.Cars.Id)*@
            <button class="btn btn-primary" type="submit">Save</button>
        </form>
    }
</div>
@if (ViewContext.HttpContext.User.IsInRole("admin"))
{
    <button class="btn akkBtn-dark fa  fa-car">@Html.ActionLink("Back To Home", "Index", "User")</button>
}
else
{
    <button class="btn akkBtn-dark fa  fa-car">@Html.ActionLink("Back To Home", "IndexUser", "User", Model, new { })</button>
}
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}